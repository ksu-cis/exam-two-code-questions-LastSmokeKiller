<UserControl x:Class="ExamTwoQuestions.PointOfSale.CustomizeCobblerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamTwoQuestions.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        
      <StackPanel>
          <TextBlock>Customize Cobbler</TextBlock>
        <Label Content="Fruit Fililing"/>
        <RadioButton GroupName="FruitFilling" FontSize="30" IsChecked="{Binding Path= IsPeach}">Peach</RadioButton>
        <RadioButton GroupName="FruitFilling" FontSize="30" IsChecked="{Binding Path= IsBlueBerry}">BlueBerry</RadioButton>
        <RadioButton GroupName="FruitFilling" FontSize="30" IsChecked="{Binding Path= IsCherry}">Cherry</RadioButton>
      </StackPanel>
    </Grid>
</UserControl>
